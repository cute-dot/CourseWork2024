<Window Background="Gray" xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LocalNet.Views.ErrorWindow"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterScreen"
        Height="100" Width="100"
        Title="ErrorWindow">
        
        <Grid RowDefinitions="*, *">
                <Grid>
                        <TextBlock Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Ошибка"></TextBlock>
                </Grid>
                <Grid Grid.Row="1" >
                        <Button Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_OnClick" Background="DimGray" Content="Выйти"></Button>
                </Grid>
                
        </Grid>
        
</Window>
